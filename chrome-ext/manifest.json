{
  "name": "Gantt Viewer for Github Project",
  "version": "0.4",
  "description": "Manage Github project with Gantt chart - powered by PingCAP&TiDB",
  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "dist/index.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "icons/gantt16.png",
      "32": "icons/gantt32.png",
      "64": "icons/gantt64.png",
      "128": "icons/gantt128.png"
    }
  },
  "icons": {
    "16": "icons/gantt16.png",
    "32": "icons/gantt32.png",
    "64": "icons/gantt64.png",
    "128": "icons/gantt128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
